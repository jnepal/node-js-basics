<div class="speakerslist">
  <section class="layout">
    <div class="speakers">
      <% artist.forEach(function(item) { %>
        <div class="artist group">
          <h3><%= item.title %> <span class="small">with
            <a href="/speakers/<%= item.shortname %>">
            <%= item.name %></a><span></h3>
            <p><a href="/speakers/<%= item.shortname %>">
              <img class="speaker" src="/images/speakers/<%= item.shortname%>_tn.jpg" alt="Photo of <%= item.name %>">
            </a></p>
                  <% if(page!== 'home'){ %>
                    <% if(page === 'speakerList'){ %>
                      <%= item.summary %>
                    <% }else if(page === 'speakerDetail'){ %>
                      <%- item.description %>
                    <% } %>
                  <% } %>
        </div>
      <% }); %>
    </div>
  </section>
</div>